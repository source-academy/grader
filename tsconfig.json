{
  "compilerOptions": {
    "outDir": "./build",
    "module": "CommonJS",
    "target": "es2016",
    "lib": [
      "es2017.object",
      "es2016",
      "es2015"
    ],
    "sourceMap": false,
    "allowJs": true,
    "removeComments": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "src/__tests__"
  ]
}
